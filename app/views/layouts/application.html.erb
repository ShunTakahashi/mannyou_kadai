<!DOCTYPE html>
<html>
<head>
  <title>MannyouKadai</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

</head>
<header>
  <ul class="top_menu clearfix">
    <li><%= link_to "Home", root_path, id: 'top_link' %></li>
    <% if logged_in? %>
      <li class="user_link clearfix"><%= link_to "MyPage", user_path(current_user.id) %></li>
    <% else %>
      <li class="user_link clearfix"><%= link_to "Login", new_session_path %></li>
    <% end %>
  </ul>
</header>

<div class="container">
  <body>
  <div class="main_body">
    <%= notice %>
    <%= yield %>
  </div>
  </body>
</div>
</html>
