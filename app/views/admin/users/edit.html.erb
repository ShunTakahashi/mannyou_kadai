<h1>ユーザー登録</h1>

<%= form_with(model: @user, url: admin_user_path, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "件のエラーが発生しました。") %></h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <strong><%= t('views.name') %>:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong><%= t('views.email') %>:</strong>
    <%= @user.email %>
  </p>

  <table>
    <tr>
      <th align="center"><%= form.label :admin, t('views.admin') %></th>
      <td><%= form.select :admin, [['一般', 'false'], ['管理者', 'true']] %></td>
    </tr>

  </table>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>